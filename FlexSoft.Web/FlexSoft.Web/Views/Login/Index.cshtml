@model FlexSoft.Infrastructure.Entites.WebModels.LoginInfo

@{
    ViewBag.Title = "Login";
}

<h2 style = "font-weight: normal; color:white; margin-left: 10px; font-family: &quot;Times New Roman&quot;, Times, serif">Login</h2>

<div style="padding: 10px">
    @using (Html.BeginForm("Login", "Login", new { @class = "form-horizontal", role = "form" ,}))
    {
        <div >@Html.ValidationSummary()</div>
       
        <div class="form-group">@Html.LabelFor(x => x.Username, new { @class = "col-md-2", style = "padding-left:10px; font-weight: normal; color:white; font-family: \"Georgia\", Times, serif" })</div>
        <div class="col-md-10"style="padding-bottom: 10px"> @Html.TextBoxFor(x => x.Username, new { @class = "form-control", style = "background-color:lavender; ; " })</div>
        <div style="padding: 15px"></div>
        <div class="form-group">@Html.LabelFor(x => x.Password, new { @class = "col-md-2", style = "padding-left:10px; font-weight: normal; color:white;  font-family: \"Georgia\", Times, serif" }) </div>
        <div class="col-md-10">@Html.PasswordFor(x => x.Password, new { @class = "form-control", style = "background-color:lavender", type = "password" })</div>

        <div style ="padding-top: 50px ">
            <input type="submit" value="Submit" class="btn btn-success" style="margin-left: 10px; padding: 6px 24px" />
            <a href="@Url.Action("Register", "Login")" class="btn btn-success">
                Register
                <span class="arrow" aria-hidden="true"></span>
            </a>

        </div>
    }

</div>
