@model FlexSoft.Infrastructure.Entites.WebModels.LoginInfo

@{
    ViewBag.Title = "Login";
}


<h2>Login</h2>
<div class="imgcontainer">
    @using (Html.BeginForm("Login", "Login", new { @class = "form-horizontal", role = "form" }))
    {
        <div >@Html.ValidationSummary()</div>
       
        <div class="form-group">@Html.LabelFor(x => x.Username, new { @class = "col-md-2" })</div>
        <div class="col-md-10"> @Html.TextBoxFor(x => x.Username, new { @class = "form-control", style = "background-color:lavender;" })</div>
        
        <div class="form-group">@Html.LabelFor(x => x.Password, new { @class = "col-md-2" }) </div>
        <div class="col-md-10">@Html.TextBoxFor(x => x.Password, new { @class = "form-control", style = "background-color:lavender;" })</div>

        <input type="submit" value="Submit" class="btn btn-success col-md-1"/>
    }
</div>
<div>
    @Html.ActionLink("Register", "Register",null, new { @class = "btn btn-success " })
   
</div>